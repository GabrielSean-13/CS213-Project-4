    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <GridPane prefHeight="150.0" prefWidth="345.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="248.0" minWidth="10.0" prefWidth="124.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="181.0" minWidth="0.0" prefWidth="124.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="139.0" minHeight="10.0" prefHeight="99.0" vgrow="SOMETIMES" />
