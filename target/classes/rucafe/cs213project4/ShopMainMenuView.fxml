         </Button>
         <Button mnemonicParsing="false" onAction="#displayAllOrders" prefHeight="36.0" prefWidth="76.0" text="All Orders" wrapText="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
      </children>
   </GridPane>
</VBox>
